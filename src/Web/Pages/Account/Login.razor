@page "/account/login"

<MudMainContent Class="d-flex align-center" style="height: 90vh;">
    <MudContainer MaxWidth="MaxWidth.ExtraSmall">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Welcome Back!</MudText>
                    <MudText>Sign in with an existing account</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudForm>
                    <MudTextField T="string" Variant="Variant.Outlined" Label="Username" InputType="InputType.Text" Required="true" RequiredError="Username is required!" Class="mb-4" />
                    <MudTextField T="string" Variant="Variant.Outlined" Label="Password" InputType="InputType.Password" Required="true" RequiredError="Password is required!" />
                </MudForm>
            </MudCardContent>
            <MudCardActions Class="pa-4">
                <MudStack style="width: 100%;">
                    <MudButton FullWidth="true" Size="Size.Large" Variant="Variant.Filled" Color="Color.Primary">Login</MudButton>
                    <MudButton FullWidth="true" Size="Size.Large" Variant="Variant.Text" Color="Color.Primary" Href="/account/register">Register</MudButton>
                </MudStack>
            </MudCardActions>
        </MudCard>
    </MudContainer>
</MudMainContent>